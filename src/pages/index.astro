---
import BaseLayout from '../layouts/BaseLayout.astro'
import { Categories, SITE_BASE, SITE_TITLE, SocialLinks } from '../consts'
import type { CategorySlug } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const allPosts = (await getCollection('blog', ({ data }) => data.draft !== true))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())

const posts = allPosts.slice(0, 4)

// 記事のあるカテゴリーのスラッグを取得
const categoriesWithPosts = new Set<CategorySlug>(
	allPosts
		.map((post) => post.data.category)
		.filter((category): category is CategorySlug => Boolean(category))
)

// WebSite structured data
const websiteSchema = {
	'@context': 'https://schema.org',
	'@type': 'WebSite',
	name: 'HideLog',
		description:
			'10年以上の経験を持つダイビングインストラクターが、安全に潜るための知識、器材選び、海外ダイビングのリアルな情報を実体験をもとに発信するブログ。',
	url: Astro.site?.toString() || '',
	author: {
		'@type': 'Person',
		name: 'Hidekazu Wada',
		url: 'https://blog.wadahide.com/about',
	},
	publisher: {
		'@type': 'Organization',
		name: 'HideLog',
		logo: {
			'@type': 'ImageObject',
			url: new URL('/logo.svg', Astro.site).toString(),
		},
	},
	potentialAction: {
		'@type': 'SearchAction',
		target: {
			'@type': 'EntryPoint',
			urlTemplate: `${Astro.site?.toString() || ''}/blog?q={search_term_string}`,
		},
		'query-input': 'required name=search_term_string',
	},
}

// Organization structured data
const organizationSchema = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: 'HideLog',
	url: Astro.site?.toString() || '',
	logo: new URL('/logo.svg', Astro.site).toString(),
	sameAs: SocialLinks.map((link) => link.url),
}
---

<BaseLayout title={SITE_TITLE}>
	<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
	<script
		type="application/ld+json"
		set:html={JSON.stringify(organizationSchema)}
	/>
	<main
		class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56 relative"
	>
		<div>
			<p class="block text-2xl md:text-3xl opacity-70 mt-9 mb-4">
				10年以上の経験を持つダイビングインストラクターが贈る
			</p>
			<h1 class="text-6xl md:text-8xl font-bold leading-none">HideLog</h1>
		</div>
		<p class="text-2xl max-w-3xl font-light leading-normal">
			元ダイビングインストラクターとして、海外でのショップ運営や水族館での作業ダイバーなど、豊富な経験を積んできました。このブログでは、安全に潜るための知識、器材選びのコツ、海外ダイビングのリアルな情報を、実体験をもとに丁寧にお届けします。
		</p>
		<div class="flex flex-wrap gap-4">
			<a class="btn-primary" href="/blog">
				最新記事を読む
				<Icon size={20} name="mdi:arrow-right" />
			</a>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}>
				わたしについて
				<Icon size={20} name="mdi:account-circle-outline" />
			</a>
		</div>
		<div class="flex flex-wrap gap-8">
			{
				SocialLinks.map((link) => (
					<a
						class="text-xl text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
						href={link.url}
						target="_blank"
					>
						{link.name}
					</a>
				))
			}
		</div>
	</main>

	<section class="app-container pt-4 pb-8 space-y-10">
		<div class="space-y-4">
			<p class="text-sm uppercase tracking-[0.3em] text-primary">Topics</p>
			<h2 class="section-title">ダイビングに関する情報</h2>
			<p class="text-lg max-w-3xl">
				初心者から上級者まで、ダイビングを安全に楽しむための知識と実体験をまとめています。ライセンス取得、器材選び、海外ダイビング、安全管理など、あなたのダイビングライフをサポートします。
			</p>
		</div>
		<div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
			{
				Categories.filter(
					(cat) => cat.showOnHome !== false && categoriesWithPosts.has(cat.slug)
				).map((category) => (
					<a
						class="border border-foreground/10 rounded-3xl p-6 flex flex-col gap-4 hover:-translate-y-1 hover:border-foreground/40 transition-transform duration-200"
						href={`${SITE_BASE}/category/${category.slug}`}
					>
						<span class="text-xs uppercase tracking-[0.3em] text-primary">
							{category.tagline}
						</span>
						<h3 class="text-2xl font-semibold">{category.name}</h3>
						<p class="text-base leading-relaxed opacity-80">
							{category.summary}
						</p>
						<ul class="text-sm opacity-70 space-y-1">
							{category.focus.map((topic) => (
								<li>・{topic}</li>
							))}
						</ul>
						<span class="mt-auto text-sm font-medium inline-flex items-center gap-2">
							{category.ctaLabel}
							<Icon size={18} name="mdi:arrow-top-right" />
						</span>
					</a>
				))
			}
		</div>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">Recent Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href="/blog"
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">About Me</h2>
			<p class="text-lg max-w-xl pb-4">
				ダイビングインストラクターとして10年以上の経験を持ち、海外でのショップ運営や水族館での作業ダイバーとして活動しています。詳しい経歴はこちらから。
			</p>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}
				>詳しく見る
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">Get in touch</h2>
			<p class="text-lg max-w-xl">ダイビングに関するご相談やお問い合わせはこちらからどうぞ</p>
			<div class="flex flex-wrap mt-auto space-x-4">
				<a
					class="btn-primary"
					href="mailto:info@wadahide.com"
					download
					target="_blank"
					>Get in touch
					<Icon height={20} name="mdi:email" />
				</a>
				<!-- <a class="btn-secondary" href="https://example.com" target="_blank"
					>Download Resume
					<Icon height={20} name="mdi:arrow-collapse-down" />
				</a> -->
			</div>
		</div>
	</section>
</BaseLayout>
